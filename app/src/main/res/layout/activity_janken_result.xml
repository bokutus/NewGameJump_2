<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".JankenResult">

    <ImageView
            android:layout_width="158dp"
            android:layout_height="152dp" app:srcCompat="@drawable/gu"
            android:id="@+id/myHand" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultLabel" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="460dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <ImageView
            android:layout_width="336dp"
            android:layout_height="203dp" app:srcCompat="@drawable/aiko"
            android:id="@+id/cpFace"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.44" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="158dp"
            android:layout_height="152dp" app:srcCompat="@drawable/gu"
            android:id="@+id/cpHand" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cpFace" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/resultLabel" app:layout_constraintVertical_bias="0.181"
            android:layout_marginStart="124dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="YOU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" app:layout_constraintStart_toEndOf="@+id/myHand"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="@+id/myHand"
            app:layout_constraintHorizontal_bias="0.423" android:textSize="30sp"
            android:textColor="@android:color/background_dark"/>
    <TextView
            android:text="CPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" android:textSize="30sp"
            android:layout_marginBottom="224dp" app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintStart_toEndOf="@+id/cpHand" android:layout_marginStart="28dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/cpHand"
            app:layout_constraintVertical_bias="0.984" android:textColor="@android:color/background_dark"/>
    <Button
            android:text="TOP画面へ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            app:layout_constraintEnd_toStartOf="@+id/myHand"
            android:layout_marginEnd="16dp" android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="@+id/myHand"/>
</androidx.constraintlayout.widget.ConstraintLayout>